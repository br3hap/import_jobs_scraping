<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View job.portal.search.wizard form -->
    <record id="view_job_portal_search_wizard_form" model="ir.ui.view">
        <field name="name">view.job.portal.search.wizard.form</field>
        <field name="model">job.portal.search.wizard</field>
        <field name="arch" type="xml">
            <form string="Job Portal Search Wizard">
                <group name="name" string="string">
                    <field name="source_ids" widget="many2many_tags"/>
                    <field name="keywords"/>
                </group>
                <footer>
                    <button name="action_search" type="object" string="Buscar" class="btn-primary"/>
                    <button special="cancel" string="Cancelar" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
